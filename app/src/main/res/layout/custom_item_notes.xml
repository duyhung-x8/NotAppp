<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#FF9900"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitleCustom"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15sp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginStart="250dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgAlarmCustom"
            android:src="@drawable/ic_action_alarms"/>

        <TextView
            android:id="@+id/txtCustom"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/txtTitleCustom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:id="@+id/rl2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtContentCustom"
            android:textSize="9sp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl2"
        android:layout_width="match_parent"
        android:id="@+id/rl3"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="150dp"
            android:layout_width="match_parent"
            android:id="@+id/txtCreatedDateCustom"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.notet.activity" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_note"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.notet.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.notet.activity.ChooseColor"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:label="@string/title_activity_choose_color" >
        </activity>

        <activity
            android:name="com.notet.activity.AddNote"
            android:parentActivityName="com.notet.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:name="com.notet.activity.InsertPhoto"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
